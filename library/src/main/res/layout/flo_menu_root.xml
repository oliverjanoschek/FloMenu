<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/linearLayoutRoot"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="10dp"
    android:layout_marginTop="10dp"
    android:clickable="false"
    android:clipChildren="false"
    android:clipToPadding="false"
    android:gravity="center_vertical|center|end"
    android:longClickable="false"
    android:orientation="horizontal">

    <android.support.v7.widget.CardView
        android:id="@+id/cardViewRoot"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:duplicateParentState="true"
        app:cardCornerRadius="3dp"
        app:cardElevation="2dp"
        app:cardMaxElevation="2dp"
        app:cardUseCompatPadding="true">

        <TextView
            android:id="@+id/textViewRoot"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="4dp"
            android:layout_marginEnd="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="4dp"
            android:shadowRadius="0"
            android:text="@string/flo_sub_menu_label_default_text"
            android:textStyle="bold" />
    </android.support.v7.widget.CardView>

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/floatingActionButtonRoot"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_weight="1"
        android:clickable="true"
        android:focusable="true"
        app:elevation="8dp"
        app:fabSize="normal" />
</LinearLayout>